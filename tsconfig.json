{
  "compilerOptions": {
    "module": "es2015",
    "target": "ES2015",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  },
  "files": [
    "src/action.ts",
    "src/builder.ts",
    "src/camera.ts",
    "src/context.ts",
    "src/controller.ts",
    "src/debug.ts",
    "src/entity.ts",
    "src/events.ts",
    "src/geometry.ts",
    "src/graphics.ts",
    "src/map.ts",
    "src/physics.ts",
    "src/plant.ts",
    "src/scene.ts",
    "src/sound.ts",
    "src/terrain.ts",
    "src/tree.ts",
    "src/weather.ts",
    "src/world-tree.ts"
  ],
  "excludeDirectories": [ "node_modules" ]
}
