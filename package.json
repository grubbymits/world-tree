{
  "scripts": {
    "compile": "tsc --noEmit --project .",
    "build": "esbuild src/world-tree.ts --bundle --format=esm --outfile=dist/world-tree.mjs",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --coverage",
    "benchmark": "node --experimental-vm-modules benchmarks/all.js",
    "lint": "npx prettier --check --parser typescript 'src/*.ts'",
    "format": "prettier --write --parser typescript src/*.ts; prettier --write tests/*.mjs"
  },
  "devDependencies": {
    "esbuild": "^0.17.19",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4"
  }
}
